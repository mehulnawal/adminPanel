{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler", 
    "jsx": "react-jsx",
    "checkJs": true,
    "baseUrl": ".", 
    "paths": {
      "@/*": ["src/*"] 
    },
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "isolatedModules": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}